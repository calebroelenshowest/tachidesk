<Window x:Class="TachiDesk.Views.Startup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TachiDesk.Views"
        mc:Ignorable="d"
        Title="Launching TachiDesk" Height="380" Width="470"
        ResizeMode="CanMinimize">
    <Grid>
        <Image Grid.Row="0" Grid.Column="0"  Source="/TachiDesk;component/Images/tachiyomi.jpg" Margin="8"></Image>
        <TextBlock Grid.Row="1" Grid.Column="1" FontSize="22" TextAlignment="Center" VerticalAlignment="Center">Loading TachiDesk</TextBlock>
        <ProgressBar Grid.Row="2" Height="25" Margin="8"></ProgressBar>
        <TextBlock Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center">Searching for updates</TextBlock>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
    </Grid>
    
    
    
</Window>
